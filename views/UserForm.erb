            <div id="ovenSlider"></div>
        </div>
        </div>
        <div class="col-xs-6">
            <p>Oven Energy Signature</p>
            <img class="img-responsive" src="/img/OvenWatt.png" />
        </div>
    </div>
    <input type="submit" class="btn btn-default" id="submitButton" value="Submit" />
</form>

